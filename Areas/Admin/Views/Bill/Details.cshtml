@model IEnumerable<ASS_MVC.Models.BillDetail>
@using ASS_MVC.Iservice;
@using ASS_MVC.Service;

@{
    ViewData["Title"] = "Details";
    IProduct productService = new ProductService();

}

<h1>Details</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdHD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @{
                Product current = productService.Getall().FirstOrDefault(x => x.Id == item.IdSP);
                }
                <img src="/images/@current.Description" style="max-width:150px">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdHD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
               
            </td>
        </tr>
}
    </tbody>
</table>
